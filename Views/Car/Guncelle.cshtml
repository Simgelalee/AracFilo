@model Arac

 <form method="post">
        <input asp-for="AracId" hidden/>
        <div class="border p-3 mt-5">
           <div class="row pb-3">
              <h2 class "text-primary">Arac Güncelle</h2>
              </hr>
           </div>

           <div class="mb-3">
            <Label asp-for="AracName" class="p-0"></Label>
            <input asp-for="AracName" class="form-control" />
            <span asp-validation-for="AracName" class="text-danger"></span>
           </div>

        <div class="mb-3">
            <Label asp-for="Plaka" class="p-0"></Label>
            <input asp-for="Plaka" class="form-control" />
            <span asp-validation-for="Plaka" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <Label asp-for="Ozellik" class="p-0"></Label>
            <input asp-for="Ozellik" class="form-control" />
            <span asp-validation-for="Ozellik" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <Label asp-for="Vito" class="p-0"></Label>
            <input asp-for="Vito" class="form-control" />
            <span asp-validation-for="Vito" class="text-danger"></span>
        </div>

           <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Arac Güncelle</button>
           <a asp-controller="Car" asp-action="Index" class-"btn btn-Ig btn-primary" style="width:250px">
           Araclara Geri Dön
           </a>
        </div>
</form>