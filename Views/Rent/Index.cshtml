@model List<Rent>

@if (TempData["basarili"] != null)
{
	<h2 style="color:red">@TempData ["basarili"]</h2>
}
  
	   <div class="row pt-3 pb-4"
	        <div>
	           <h1>Araç Kiralamaları</h1>
	        </div>
	   </div>
<div class="container">
	
	<table class="table table-bordered">
	 <thead>
	   <tr> 
			   <th>
						 Id
			   </th>
			   <th>
					UserId
			   </th>

				<th>
						Araç İsmi
				</th>

				<th>
					CreatedDate
				</th>
				<th>
					EndDate
				</th>

				<th>
					Durum
				</th>

				<th>
					Arac
				</th>
				
	</tr>

 </thead>
 <tbody>
			@foreach(var rent in Model)
			{
				var aracname = ViewData[$"{rent.AracId}"];
				<tr>
	               
					<td>@rent.RentId</td>
					<td>@rent.UserId</td>
					<td>@aracname</td>
					<td>@rent.CreatedDate</td>
					<td>@rent.EndDate</td>
					<td>@rent.Durum</td>
					
					<td>
						<a asp-controller="Rent" asp-action="Guncelle" asp-route-id="@rent.RentId" type="button" class="btn btn-success" style="width:250px">Güncelle</a>
				    </td>

					<td>
						<a asp-controller="Rent" asp-action="Sil" asp-route-id="@rent.RentId" type="button" class="btn btn-danger" style="width:250px">Sil</a>
					</td>
					
	           </tr>
			}
 </tbody>

</table>

   
	  
 <div class="row pt-3 pb-2">
         <div> 
			 <a asp-controller= "Rent" asp-action= "RentAdd" class="btn btn-lg btn-primary" type-"button">
                 Yeni Kiralama Kaydı Oluştur
			</a>
         </div>  
</div >
 
</div>
 




